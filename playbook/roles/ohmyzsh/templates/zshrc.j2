export ZSH=$HOME/.oh-my-zsh

ZSH_THEME="minima"

# Uncomment one of the following lines to change the auto-update behavior
# zstyle ':omz:update' mode disabled  # disable automatic updates
# zstyle ':omz:update' mode auto      # update automatically without asking
# zstyle ':omz:update' mode reminder  # just remind me to update when it's time

# Uncomment the following line to change how often to auto-update (in days).
# zstyle ':omz:update' frequency 13

# Standard plugins can be found in $ZSH/plugins/
# Custom plugins may be added to $ZSH_CUSTOM/plugins/
plugins=(git)
plugins+=(fzf)
plugins+=(ripgrep)
plugins+=(dotenv)
plugins+=(copypath)
plugins+=(sudo)
plugins+=(tmux)
# Enable UTF-8 tmux feature.
ZSH_TMUX_UNICODE=true
# Create session on startup instead of autoconnecting.
ZSH_TMUX_AUTOCONNECT=false
plugins+=(nvm)
plugins+=(npm)
plugins+=(pip)
plugins+=(poetry)
plugins+=(golang)
plugins+=(kubectl)
plugins+=(helm)
plugins+=(terraform)

source $ZSH/oh-my-zsh.sh

# User configuration

# Set NeoVim as default editor.
export EDITOR='nvim'

# Ask for GPG password inside the shell.
export GPG_TTY=$(tty)

# Add Golang binaries to path.
path+=('/usr/local/go/bin')
path+=('~/go/bin')

# Add pipx binaries to path.
path+=('~/.local/bin')

{% if is_wsl %}
# Fix binareis from pip not being on PATH in WSL.
path+=('~/.local/bin')
{% endif %}

export path

COLORTERM='truecolor'
export COLORTERM

# Additional aliases.
alias grao='git remote add origin'

{% if ohmyzsh_use_bitwarden_ssh_key_storage %}
alias unseal='eval "$(ssh-agent -s)" && bw get notes '{{ ohmyzsh_bitwarden_ssh_key_note_id }}' | ssh-add key -'
alias seal='eval "$(ssh-agent -k)"'
{% endif %}
